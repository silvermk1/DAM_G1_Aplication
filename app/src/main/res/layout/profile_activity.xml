<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout">

    <!-- Contenido principal que va detrás del menú -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header de la barra superior (Toolbar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/light_blue"
            android:gravity="bottom"
            android:elevation="4dp">

            <!-- Icono del menú -->
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconohamburguesa"
                android:layout_gravity="end" />

            <!-- Icono de la izquierda -->
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/triangulo"
                android:layout_gravity="start" />

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLUTTER"
                android:textSize="24sp"
                android:textColor="@color/dark_gray"
                android:padding="16dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Contenido principal debajo de la barra de navegación -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:background="@drawable/white_gradient"
            >

            <!-- Sección de perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título de la sección -->
                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7651B6"
                    android:text=" Usuario"
                    android:textAlignment="center"
                    android:textColor="#020202"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <!-- Foto de perfil (opcional) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="@android:color/white">

                    <ImageButton
                        android:id="@+id/profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_photo_default"
                        android:scaleType="centerCrop"
                        android:background="@null"/> <!-- Esto asegura que no haya fondo visible -->
                </androidx.cardview.widget.CardView>

                <!-- Campo de biografía -->
                <EditText
                    android:id="@+id/biographyTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Escribe tu biografía"
                    android:inputType="textMultiLine"
                    android:padding="8dp" />

                <!-- Buscador de amigos y botón -->
                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/FriendSearcher"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:ems="10"
                        android:hint="Buscar Amigo"
                        android:inputType="textMultiLine"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/friendsSearch"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:text="Agregar Amigo"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Contenedor para los iconos de las redes sociales -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Aquí van los iconos de las redes sociales -->
                        <ImageButton
                            android:id="@+id/youtubeButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/youtube" />

                        <ImageButton
                            android:id="@+id/twitterxButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/twitterx" />

                        <ImageButton
                            android:id="@+id/facebookButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/facebook" />

                        <ImageButton
                            android:id="@+id/twitchButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/twitch" />

                        <ImageButton
                            android:id="@+id/redditButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/reddit" />

                        <ImageButton
                            android:id="@+id/steamButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/steam" />

                        <ImageButton
                            android:id="@+id/epicgamesButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/epicgames" />

                        <ImageButton
                            android:id="@+id/nswitchButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/nswitch" />

                        <ImageButton
                            android:id="@+id/psnButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/psn" />

                        <ImageButton
                            android:id="@+id/xboxButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/xbox" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Botones para interacciones -->
                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/friendsListButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@android:color/holo_orange_dark"
                        android:text="Amigos"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Cerrar sesión"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>

    <!-- Menú lateral (NavigationView) que se desliza sobre el contenido -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:elevation="10dp" />
</androidx.drawerlayout.widget.DrawerLayout>
