<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/dark_blue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/header"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:contentDescription="Menú"
                android:src="@drawable/iconohamburguesa"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/triangulo"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:text="Perfil"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/light_gray">

            <ImageButton
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/iconomas"
                android:scaleType="centerCrop"
                android:background="?android:attr/selectableItemBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    android:text="Usuario"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    android:text="Correo"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/youtubeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/youtube"/>

            <ImageButton
                android:id="@+id/twitterxButton"
                android:src="@drawable/twitterx"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/facebookButton"
                android:src="@drawable/facebook"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/twitchButton"
                android:src="@drawable/twitch"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/redditButton"
                android:src="@drawable/reddit"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/steamButton"
                android:src="@drawable/steam"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/epicgamesButton"
                android:src="@drawable/epicgames"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/nswitchButton"
                android:src="@drawable/nswitch"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/psnButton"
                android:src="@drawable/psn"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/xboxButton"
                android:src="@drawable/xbox"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <EditText
            android:id="@+id/biographyTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Biografía"
            android:inputType="textMultiLine"
            android:padding="8dp"/>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/FriendSearcher"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="Buscar Amigo"
                android:inputType="textMultiLine"
                android:padding="8dp"/>

            <Button
                android:id="@+id/friendsSearch"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/light_green"
                android:text="Agregar Amigo"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/friendListButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/dark_gray"
                android:text="Amigos"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/editSocialButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/dark_gray"
                android:text="Editar Perfil"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="140dp"
                android:layout_marginHorizontal="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Cerrar sesión"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Menú lateral (NavigationView) que se desliza sobre el contenido -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:elevation="10dp"/>

</androidx.drawerlayout.widget.DrawerLayout>