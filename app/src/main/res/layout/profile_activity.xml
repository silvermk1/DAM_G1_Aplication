<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@android:color/holo_orange_light">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile_photo_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:text="Usuario"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:text="Correo"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/biographyTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Biografía"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/FriendSearcher"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="Buscar Amigo"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <Button
            android:id="@+id/friendsSearch"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Enviar Solicitud"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/friendListButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="#FF8000"
            android:text="Amigos"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Guardar cambios"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cerrarsesion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Cerrar sesión"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:background="@android:color/holo_blue_light">

            <Button
                android:id="@+id/profileButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Perfil" />

            <Button
                android:id="@+id/homeButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Home" />

            <Button
                android:id="@+id/supportButton"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Soporte" />
        </LinearLayout>
    </LinearLayout>
    <!-- FOOTER -->
</LinearLayout>