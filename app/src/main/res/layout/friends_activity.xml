<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="#F5F5F5">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/titleFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amigos y Solicitudes Pendientes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea móvil/divisor -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dividerGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Sección de Amigos -->
    <TextView
        android:id="@+id/friendsSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Amigos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF6200"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleFriends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/friendsSectionTitle"
        app:layout_constraintBottom_toTopOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea de color (divisor visual, opcional si no usas Guideline) -->
    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#6200EE"
        app:layout_constraintTop_toTopOf="@id/dividerGuideline"
        app:layout_constraintBottom_toBottomOf="@id/dividerGuideline" />

    <!-- Sección de Solicitudes Pendientes-->
    <TextView
        android:id="@+id/pendingRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____________________________"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <ListView
        android:id="@+id/pendingRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/pendingRequestsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para mover la línea divisoria -->
    <Button
        android:id="@+id/dragButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitudes"
        android:textColor="#ffffff"
        android:backgroundTint="#6200EE"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
