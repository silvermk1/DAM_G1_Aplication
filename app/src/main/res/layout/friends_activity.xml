<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@drawable/white_gradient"
    android:elevation="8dp"
    android:layout_gravity="center"
    >

    <!-- Línea móvil/divisor -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dividerGuideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Título de la pantalla -->

    <!-- Sección de Amigos -->

    <!-- Imagen del menú a la derecha del título -->
    <TextView
        android:id="@+id/titleFriends"
        android:layout_width="341dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_light"
        android:padding="16dp"
        android:text="Social"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/menuButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menú"
        android:src="@drawable/botonhamburguesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titleFriends"
        app:layout_constraintTop_toTopOf="@id/titleFriends" />

    <TextView
        android:id="@+id/friendsSectionTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Tus Amigos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleFriends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/holo_blue_light"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:background="@android:color/white"
        android:padding="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/friendsSectionTitle"
        app:layout_constraintBottom_toTopOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea de color (divisor visual, opcional si no usas Guideline) -->
    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#6200EE"
        app:layout_constraintTop_toTopOf="@id/dividerGuideline"
        app:layout_constraintBottom_toBottomOf="@id/dividerGuideline" />

    <!-- Sección de Solicitudes Pendientes-->
    <TextView
        android:id="@+id/pendingRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitudes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/pendingRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:divider="@android:color/darker_gray"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/pendingRequestsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white" />

    <!-- Botón para mover la línea divisoria -->
    <Button
        android:id="@+id/dragButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:divider="@android:color/darker_gray"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/dividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MENU BOTONES -->
    <LinearLayout
        android:id="@+id/panelMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:backgroundTint="#D3D3D3"
            android:textColor="#424242"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:backgroundTint="#D3D3D3"
            android:textColor="#424242"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sopporte"
            android:backgroundTint="#D3D3D3"
            android:textColor="#424242"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

