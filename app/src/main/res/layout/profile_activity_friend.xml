<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout">

    <!-- Contenido principal que va detrás del menú -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header de la barra superior (Toolbar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/light_blue"
            android:gravity="bottom"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconohamburguesa"
                android:layout_gravity="end" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/triangulo"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACTUM"
                android:textSize="24sp"
                android:textColor="@color/dark_gray"
                android:padding="16dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Contenido principal detrás del menú -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:background="@drawable/white_gradient"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="@android:color/white">

                    <ImageButton
                        android:id="@+id/imagenusuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_photo_default"
                        android:scaleType="centerCrop"
                        android:background="@null"/>
                </androidx.cardview.widget.CardView>
                <!-- Nombre del usuario -->
                <TextView
                    android:id="@+id/usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE USUARIO"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:paddingTop="8dp" />

                <!-- Botón para compartir logro -->
                <Button
                    android:id="@+id/compartirlogro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPARTIR LOGRO"
                    android:backgroundTint="#03A9F4"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center" />

                <!-- ListView de Objetivos -->
                <ListView
                    android:id="@+id/listaobjetivos"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/darker_gray"
                    android:padding="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp" />

                <!-- Botón de solicitud -->
                <Button
                    android:id="@+id/solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#FF8000"
                    android:text="SOLICITUD"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <!-- Menú lateral (NavigationView) que se desliza sobre el contenido -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:elevation="10dp" />
</androidx.drawerlayout.widget.DrawerLayout>