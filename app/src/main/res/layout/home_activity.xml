<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@drawable/white_gradient"
    android:elevation="8dp"
    android:layout_gravity="center"
    >

    <!-- Contenido principal que va detrás del menú -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header de la barra superior (Toolbar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/light_blue"
            android:gravity="bottom"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconohamburguesa"
                android:layout_gravity="end" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/triangulo"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLUTTER"
                android:textSize="24sp"
                android:textColor="@color/dark_gray"
                android:padding="16dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Contenido principal detrás del menú -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:background="@drawable/white_gradient"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <!-- Título -->
                <TextView
                    android:id="@+id/favAchievTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#7651B6"
                    android:text="Logros Favoritos"
                    android:textAlignment="center"
                    android:textColor="#020202"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <!-- Lista -->
                <ListView
                    android:id="@+id/listViewFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Botón Buscar -->
                <Button
                    android:id="@+id/searchButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#03A9F4"
                    android:text="Buscar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Botón Categorías -->
                <Button
                    android:id="@+id/categoriesButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF8000"
                    android:text="Categorías"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <!-- Menú lateral (NavigationView) que se desliza sobre el contenido -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        android:elevation="10dp" />
</androidx.drawerlayout.widget.DrawerLayout>
