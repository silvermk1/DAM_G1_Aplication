<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white"/> <!-- Fondo blanco -->

    <!-- Borde discontinuo -->
    <stroke
        android:width="4dp"
        android:color="#DEDBDB"
        android:dashWidth="8dp"
    android:dashGap="4dp" />

    <!-- Gradiente de fondo -->
    <gradient
        android:startColor="#FFFFFF"
        android:centerColor="#C7D3D1"
        android:endColor="#FFFFFF"
        android:angle="45" />
</shape>
