<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco que se desvanece a gris claro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <gradient
                android:startColor="#FFFFFF"
            android:centerColor="#F5F5F5"
            android:endColor="#E0E0E0"
            android:angle="90" />
        </shape>
    </item>
    <!-- Borde sutil para crear efecto de brillo en una parte del fondo -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#E8E8E8"/> <!-- Gris suave alrededor para darle suavidad -->
            <corners android:radius="4dp"/>   <!-- Bordes redondeados para un toque elegante -->
        </shape>
    </item>
</layer-list>